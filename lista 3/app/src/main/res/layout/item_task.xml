<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:background="#d7e1e8"
    android:layout_marginTop="25dp"
    android:textSize="20sp">


    <!-- Lewy górny: Przedmiot -->
    <TextView
        android:id="@+id/subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przedmiot"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <!-- Lewy dolny: Liczba zadań -->
    <TextView
        android:id="@+id/task_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zadań: 10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>

    <!-- Prawy górny: Numer listy -->
    <TextView
        android:id="@+id/list_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numer listy"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <!-- Prawy dolny: Ocena -->
    <TextView
        android:id="@+id/grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ocena: 4.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textSize="20sp"/>

</RelativeLayout>
